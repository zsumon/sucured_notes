<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="oop_project.loginwithsqlite.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:src="@drawable/fp_"
        android:visibility="visible" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="SecuredNotes"
        android:textColor="#51efdd"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/login_username_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/roundcorner"
        android:drawableLeft="@drawable/grey_24"
        android:drawablePadding="3dp"
        android:hint="USERNAME"
        android:maxLines="1"

        android:padding="15dp"
        android:selectAllOnFocus="false" />

    <EditText
        android:id="@+id/login_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/roundcorner"
        android:drawableLeft="@drawable/ic_key_grey600_24dp"
        android:drawablePadding="3dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"

        android:padding="15dp" />


    <TextView
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_for_login"
        android:gravity="center_horizontal"
        android:hint="LOGIN"

        android:onClick="loginButton"
        android:padding="18dp"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/forget_pass_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="forgetPassword"
            android:padding="10dp"
            android:text="PASSWORD"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <View
            android:id="@+id/bottom_devider"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="#FFFF" />

        <TextView
            android:id="@+id/registration_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="registerUser"
            android:padding="10dp"
            android:text="REGISTER"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
